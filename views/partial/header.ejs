<!-- ===== Navbar ===== -->
<nav class="navbar navbar-expand-lg main-navbar sticky-top">
  <div class="container">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <img src="/assets/images/appointment.JPEG">
      <span class="brand-text">QuickDoc</span>
    </a>

    <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/about">About</a></li>

        <!-- Patient -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-toggle="dropdown">Patient</a>
          <div class="dropdown-menu">
            <% if (!data.user) { %>
              <a class="dropdown-item" href="/patientregistration">Registration</a>
              <a class="dropdown-item" href="/patientlogin">Login</a>
            <% } else if (data.user.usertype === "patient") { %>
              <a class="dropdown-item" href="/patienthome">Dashboard</a>
              <a class="dropdown-item" href="/logout">Logout</a>
            <% } %>
          </div>
        </li>

        <!-- Doctor -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-toggle="dropdown">Doctor</a>
          <div class="dropdown-menu">
            <% if (!data.user) { %>
              <a class="dropdown-item" href="/doctorregistration">Registration</a>
              <a class="dropdown-item" href="/doctorlogin">Login</a>
            <% } else if (data.user.usertype === "doctor") { %>
              <a class="dropdown-item" href="/doctorhome">Dashboard</a>
              <a class="dropdown-item" href="/logout">Logout</a>
            <% } %>
          </div>
        </li>

        <!-- ambulance -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" data-toggle="dropdown">Ambulance</a>
          <div class="dropdown-menu">
            <% if (!data.user) { %>
              <a class="dropdown-item" href="/ambulanceregistration">Registration</a>
              <a class="dropdown-item" href="/ambulancelogin">Login</a>
            <% } else if (data.user.usertype === "ambulance") { %>
              <a class="dropdown-item" href="/ambulancehome">Dashboard</a>
              <a class="dropdown-item" href="/logout">Logout</a>
            <% } %>
          </div>
        </li>

        <li class="nav-item">
          <a class="btn btn-appointment" href="/patientregistration">
            Book Appointment
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>


<script src="/assets/lib/js/jquery.min.js"></script>
<script src="/assets/lib/js/bootstrap.bundle.min.js"></script>

</body>
</html>
