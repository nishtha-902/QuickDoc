<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Meta -->
  <%- include('partial/title.ejs'); %>

  <% if (data.NODE_ENV === 'production') { %>
    <link rel="stylesheet" href="/assets/production/css/loginRegister.min.css">
  <% } else { %>
    <link rel="stylesheet" href="/assets/lib/css/bootstrap.min.css">
    <link rel="stylesheet" href="/assets/lib/css/fontawesome.min.css">
    <link rel="stylesheet" href="/assets/lib/css/responsive.css">
    <link rel="stylesheet" href="/assets/lib/css/select2.min.css">
    <link rel="stylesheet" href="/assets/lib/css/spacing.css">
    <link rel="stylesheet" href="/assets/lib/css/style.css">
    <link rel="stylesheet" href="/assets/lib/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/assets/lib/css/bootstrap-datepicker.min.css">
    <link rel="stylesheet" href="/assets/lib/css/magnific-popup.css">
    <link rel="stylesheet" href="/assets/css/header.css">
    <link rel="stylesheet" href="/assets/css/home.css">
  <% } %>

  <style>
    body {
      background-color: #f2f7fc;
    }

    .contact-area {
      padding-top: 60px;
      padding-bottom: 60px;
    }

    .prescription-card {
      background: #ffffff;
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 8px 25px rgba(0, 123, 255, 0.2);
      transition: all 0.3s ease-in-out;
    }

    .prescription-card:hover {
      box-shadow: 0 12px 35px rgba(0, 123, 255, 0.3);
      transform: translateY(-5px);
    }

    .prescription-card h2 {
      color: #007bff;
      font-weight: 700;
      text-align: center;
      margin-bottom: 25px;
    }

    .form-group p {
      font-weight: 600;
      color: #007bff;
      margin-bottom: 8px;
    }

    .form-control {
      border: 1px solid #007bff;
      border-radius: 8px;
      min-height: 80px;
      resize: vertical;
      padding: 10px;
    }

    .cloudinary-button {
      background-color: #007bff;
      color: #fff;
      padding: 10px 18px;
      border-radius: 8px;
      font-weight: 500;
      text-decoration: none;
      display: inline-block;
      transition: 0.3s;
    }

    .cloudinary-button:hover {
      background-color: #0056b3;
      color: #fff;
      text-decoration: none;
    }

    button.btn-submit {
      background-color: #007bff;
      color: #fff;
      font-weight: 600;
      padding: 12px 30px;
      border-radius: 10px;
      border: none;
      width: 100%;
      transition: all 0.3s ease;
    }

    button.btn-submit:hover {
      background-color: #0056b3;
      color: #fff;
    }

    .upload-section {
      text-align: center;
      margin-top: 15px;
    }

    @media (max-width: 768px) {
      .prescription-card {
        padding: 20px;
      }
    }
  </style>
</head>

<body onload="typeWriter()">
  <!-- Header -->
  <%- include('partial/header.ejs', { data: data }); %>

  <div class="contact-area">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
          <div class="prescription-card">
            <h2>Add Prescription</h2>

            <form action="/doctorhome/<%= data.PatientId %>/<%= data.AppointmentId %>/addprescription" method="POST" accept-charset="utf-8">

              <div class="form-group">
                <p>Symptoms</p>
                <textarea class="form-control" id="Symptoms" name="Symptoms" placeholder="Describe patient's symptoms" required></textarea>
              </div>

              <div class="form-group">
                <p>Tests</p>
                <textarea class="form-control" id="Tests" name="Tests" placeholder="Recommended tests" required></textarea>
              </div>

              <div class="form-group">
                <p>Medicines</p>
                <textarea class="form-control" id="Medicines" name="Medicines" placeholder="Prescribed medicines" required></textarea>
              </div>

              <div class="form-group">
                <p>Remarks</p>
                <textarea class="form-control" id="Remarks" name="Remarks" placeholder="Additional notes" required></textarea>
              </div>

              <input type="hidden" class="hiddenField" name="urllist" id="urllist" />

              <div class="upload-section">
                <p>Upload digital signature</p>
                <a id="upload_widget" class="cloudinary-button">Upload Signature</a>
              </div>

              <div class="form-group mt-4">
                <button type="submit" class="btn-submit" name="form_registration">Add Prescription</button>
              </div>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <%- include('partial/footer.ejs'); %>

  <!-- Cloudinary Upload Widget -->
  <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
  <script>
    var myWidget = cloudinary.createUploadWidget({
      cloudName: 'hospital-website',
      uploadPreset: 'wcj4suvr'
    }, (error, result) => {
      if (!error && result && result.event === "success") {
        if (document.getElementById("urllist").value === '') {
          document.getElementById("urllist").value = result.info.secure_url;
        } else {
          document.getElementById("urllist").value += "," + result.info.secure_url;
        }
      }
    });

    document.getElementById("upload_widget").addEventListener("click", function () {
      myWidget.open();
    }, false);
  </script>

  <!-- Typewriter -->
  <script>
    let i = 0;
    const txt = "WELCOME TO MEDBUDDY";
    function typeWriter() {
      if (i < txt.length) {
        document.getElementById("typeit").innerHTML += txt.charAt(i);
        i++;
        setTimeout(typeWriter, 60);
      }
    }
  </script>

  <!-- JS Libraries -->
  <script defer src="/assets/lib/js/jquery-3.4.1.min.js"></script>
  <script defer src="/assets/lib/js/popper.min.js"></script>
  <script defer src="/assets/lib/js/bootstrap.bundle.min.js"></script>
  <script defer src="/assets/lib/js/all.min.js"></script>
  <script defer src="/assets/lib/js/select2.full.min.js"></script>

</body>
</html>
